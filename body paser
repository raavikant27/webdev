const express = require("express");
const bodyparser = require("body-parser");

let app = express(); //configur our app
//we have got our app

app.use(bodyparser.urlencoded({ extended: false }));
//extended , we create a object. in documentation mention like this .
// in app.use(middleware)
//this is our need body

app.use("/login", express.static(__dirname + "/public")); //this middlewer for express when somebody is login route adte that we not configure to res, we configure to static file, letter on see how to serve on template on it.in expres file we just combine their path

//after that below we serve simple route
app.get("/", (req, res) => {
  res.send("Hello, my application!");
});
//mention were should u go mention it
app.post("/login", (req, res) => {
  console.log(req.body.email); //req.body is whole geyganting object, puri body
  //do some database process
  res.redirect("/"); //
});

app.listen(3000, () => console.log("Server is running at port 3000"));

